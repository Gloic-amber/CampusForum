<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ustc.blog.mapper.CollectBlogMapper">

	<select id="selectMapByUserIdAndBlogIdList" resultType="integer">
		select blog_id
		from collect_blog where user_id = #{userId} and blog_id in
		<foreach collection="blogIdList" item="blogId" open="(" separator="," close=")">
			#{blogId}
		</foreach>
		and deleted = 0
		;
	</select>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ustc.user.mapper.UserMapper">
	<update id="deleteById">
		update `user`
		set `deleted` = ${id}
		where `id` = ${id}
		  and `deleted` = 0
	</update>
</mapper>
